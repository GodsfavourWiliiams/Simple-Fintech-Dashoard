{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/lib.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/sideBar/providerIcon.tsx",
    "src/components/header/providerIcons.tsx"
  ]
}
